{
  "name": "ts-truffle-playground",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:alesanro/ts-truffle-playground.git",
  "author": "Alex Rudyak <aliaksandr.rudziak@instinctools.ru>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "npx tsc && npx truffle test",
    "clean:contracts": "rm -rf ./src/generated/contracts && rm ./src/generated/artifacts*",
    "compile:abi": "npx abi-gen --abis ./build/contracts/**/*.json --out ./src/generated/contracts --template ./src/generated/contract_templates/contract.handlebars --partials ./src/generated/contract_templates/partials/**/*.handlebars --backend web3 --network-id 123456789",
    "scripts:compile": "npx tsc ./scripts/**/*.ts",
    "compile:artifacts": "npm run scripts:compile && node ./scripts/artifacts-export/cli.js -i ./src/generated/contracts -o ./src/generated -a=./build/contracts -t=./scripts/artifacts-export/templates",
    "compile:contracts": "npm run compile:abi && npm run compile:artifacts",
    "compile:force": "npm run clean:contracts && npm run compile:contracts",
    "truffle:test": "npm run compile:force && npm test"
  },
  "dependencies": {
    "@machinomy/types-web3": "^0.0.12",
    "@types/glob": "^5.0.35",
    "@types/handlebars": "^4.0.39",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11"
  },
  "devDependencies": {
    "@0xproject/abi-gen": "^1.0.5",
    "@types/chai": "^4.1.4",
    "@types/humps": "^1.1.2",
    "@types/lodash": "^4.14.116",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "@types/yargs": "^11.1.1",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "ganache-cli": "^6.1.8",
    "humps": "^2.0.1",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "truffle": "^4.1.14",
    "typescript": "^3.0.1",
    "yargs": "^12.0.1"
  }
}
